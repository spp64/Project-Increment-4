<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fgrim.msnake.GraphActivity" >

    <Button
        android:id="@+id/gamePieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Statistics" />

    <Button
        android:id="@+id/totalPie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Statistics" />

    <Button
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map Activity" />
    
    <Button android:id="@+id/barGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bar Graph" 
        />

</LinearLayout>